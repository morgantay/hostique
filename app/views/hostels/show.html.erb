
<div class="main-container" >

  <div class="banner"  style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.3)), url('<%= cl_image_path @hostel.photos.first.key, crop: :fill %>')">
    <div class="amenities-container">
      <% if policy(@hostel).create? %>
        <div class="amenity-text"> add amenity
          <div class="amenity-form">
            <%= simple_form_for([@hostel, @amenity_tag]) do |f| %>
                <%= f.input :amenity, collection: Amenity.all, input_html: { multiple: true, id: "select-tags",
                data: {controller: "tom_select", tom_select_options_value: {tags: true}}},
                include_hidden: false%>
                <%= f.submit %>
            <% end %>
          </div>
        </div>
      <% end %>
      <% @hostel.amenities.each do |amenity| %>
        <p><%= amenity.name %></p>
        <% end %>
    </div>
    <div class="name-address-container">
      <h1><%= @hostel.name %></h1>
      <h3><%= @hostel.address %></h3>
    </div>

  </div>

</div>


<div class="rooms-map-container">
  <div id='hostelmap' style="width: 50%; height: 100%;"
    data-controller="map"
    data-map-marker-value="<%= @marker.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="hotel-rooms-container">
      <% if policy(@hostel).create? %>
        <div class="add-room-btn">Add Room
          <div class="add-room-form">
            <%= simple_form_for([@hostel, @room]) do |f| %>
              <%= f.input :number_of_beds, as: :integer %>
              <%= f.input :price_per_night, as: :integer %>
              <%= f.input :name %>
              <%= f.input :description, as: :text %>
              <%= f.input :photo, as: :file %>
              <%= f.submit %>
            <% end %>
          </div>
        </div>
      <% end %>
      <% @hostel.rooms.each do |room| %>
          <div class="room-container">
            <div class="room-image-container">
              <%= cl_image_tag room.photo.key, height: 120, width: 150, crop: :fill %>
            </div>
            <div class="room-info-container">
              <a href="#<%=room.id%>"> <h4><%= room.name %></h4></a>
              <div class="room-details-container">
                <p><%= room.number_of_beds %> beds</p> <br>
                <p><%= room.price_per_night %> USD</p>
              </div>
            </div>

            <div>
              <%= link_to 'remove', room_path(room), data: {turbo_method: :delete} if policy(room.hostel).destroy? %>
              <% if policy(room.hostel).edit? %>
                <div class="edit-container">
                  edit
                  <div class="edit-form">
                    <%= simple_form_for(room) do |f| %>
                      <%= f.input :number_of_beds, as: :integer %>
                      <%= f.input :price_per_night, as: :integer %>
                      <%= f.input :name %>
                      <%= f.input :description, as: :text %>
                      <%= f.submit "Update" %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>


<% @hostel.rooms.each do |room| %>
  <% @reservation = Reservation.new %>
  <div id="<%=room.id%>" class="room">
      <a href="#top" class="top-container">TOP
      </a>
      <div class="room-page-info-container">
        <h2><%= room.name %> by <%= @hostel.name %></h2>
        <p><%= room.number_of_beds %> beds</p>
        <div class="separatior-line"></div>
        <p class="description"><%= room.description %></p>
        <div class="separatior-line"></div>

        <div class="reviews-container">
          <div class="review-btns-container" style="display:flex">
            <h2>Reviews</h2>
            <div class="add-review-text">Add Review
              <div class="add-review-form">
                <%= simple_form_for([@hostel, @review]) do |f| %>
                    <%= f.input :content, as: :text %>
                    <%= f.input :rating, collection: (1..5).to_a %>
                    <%= f.submit %>
                <% end %>
              </div>
            </div>
          </div>

          <% @hostel.reviews.each do |review| %>
            <div class = "review-container">
              <div class="stars-container">
                <% count = review.rating %>
                <% i = 0  %>
                <% while i < count %>
                <p class ="review-star">⭐️</p>
                <% i += 1 %>
                <% end %>
              </div>
              <p class ="review-text"><%= review.content %></p>
            </div>
          <% end %>
        </div>
      </div>

      <div class="price-container">
        <h2><%= room.price_per_night %> USD</h2>
        <h5>per night</h5>
      </div>
      <div class="booking-container">
        <h2>Book your stay now!</h2>
        <%= simple_form_for([room, @reservation]) do |f| %>
          <%= f.input :start_date, as: :date, order: %i[day month year], html5: true %>
          <%= f.input :end_date, as: :date, order: %i[day month year], html5: true %>
          <%= f.input :room_quantity, collection: 1..room.number_of_beds %>
          <%= f.submit %>
        <% end %>
      </div>
  </div>
<% end %>



<div class="hostels-container">

  <% @hostels.each do |hostel| %>
    <div class="hostel-container" >
      <div class="image-container">
          <% if hostel.photos.attached? %>
            <%= cl_image_tag hostel.photos.first.key, height: 180, width: 290, crop: :fill %>
          <% end %>
      </div>
      <div class="hostel-card">
      <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@500&family=Inconsolata:wght@500&family=Inter:wght@300;400;500&family=Mulish&display=swap" rel="stylesheet">
        <%= link_to "#{hostel.name}", hostel_path(hostel), class:"hostel-name" %> <br>
        <%= hostel.city %>
        <%# <%= hostel.address %>
        <%# <%= hostel.description %>
      </div>
    </li>
    </div>
  <% end %>

</div>
